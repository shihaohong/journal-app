{
  "name": "journal-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:cf": "bun run build:cf && wrangler pages dev .vercel/output/static --d1=DB=journal-db --r2=STORAGE=journal-storage",
    "dev:cf:local": "bun run build:cf && wrangler pages dev .vercel/output/static --d1=DB=journal-db --r2=STORAGE=journal-storage --persist-to=.wrangler/state",
    "build": "next build",
    "build:cf": "next build && npx @cloudflare/next-on-pages@latest",
    "start": "next start",
    "lint": "next lint",
    "deploy": "bun run build:cf && wrangler pages deploy .vercel/output/static",
    "deploy:preview": "bun run build:cf && wrangler pages deploy .vercel/output/static --branch=preview",
    "deploy:list": "wrangler pages deployment list",
    "deploy:logs": "wrangler pages deployment tail",
    "db:local:init": "wrangler d1 execute journal-db --local --file=./schema.sql",
    "db:remote:init": "wrangler d1 execute journal-db --remote --file=./schema.sql",
    "db:local:query": "wrangler d1 execute journal-db --local --command",
    "db:remote:query": "wrangler d1 execute journal-db --remote --command",
    "db:remote:list": "wrangler d1 execute journal-db --remote --command=\"SELECT * FROM posts ORDER BY created_at DESC LIMIT 10;\"",
    "db:clear:remote": "bun scripts/clear-posts.ts --remote --confirm",
    "db:clear:local": "bun scripts/clear-posts.ts --local --confirm",
    "db:clear:remote:dry": "bun scripts/clear-posts.ts --remote --dry-run",
    "db:clear:local:dry": "bun scripts/clear-posts.ts --local --dry-run"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^14.2.5",
    "@cloudflare/workers-types": "^4.20240424.0",
    "@cloudflare/next-on-pages": "^1.13.16",
    "@hookform/resolvers": "^3.9.0",
    "zod": "^3.23.8",
    "react-hook-form": "^7.52.1",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.427.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5"
  }
}

